package com.ThymeTheory.entity.mob;

import com.ThymeTheory.Rayne.graphics.Sprite;
import com.ThymeTheory.entity.Entity;

public abstract class Mob extends Entity {

	protected Sprite sprite;
	protected int dir = 0;
	protected boolean moving = false;

	public boolean collision(int xa, int ya) {
		boolean solid = false;
		for (int c = 0; c < 4; c++) {
			int xt = ((x + xa) + c % 2 * 12 - 30) >> 4; // left and right, first is the left side of the tile, or when your walking right
		    int yt = ((y + ya) + c / 2 * 4 - 5 ) >> 4;	// top and bottom, first is the bottom of the tile, or when walking up	
		if (level.getTile(xt, yt).solid()) solid = true;
		}
		return solid;
		}

	public void move(int xa, int ya) {
		if (xa != 0 && ya != 0) {
			move(xa, 0);
			move(0, ya);
			return;
		}

		if (xa > 0)
			dir = 1;
		if (xa < 0)
			dir = 3;
		if (ya > 0)
			dir = 2;
		if (ya < 0)
			dir = 0;

		if (!collision(xa, ya)) {
			// System.out.println("collision not detected!");
			x += xa;
			y += ya;
		}

	}

	public void update() {
	}

	public void render() {
	}

}
